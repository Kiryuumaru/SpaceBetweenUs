<UserControl x:Class="SpaceBetweenUs.Views.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/Views/Contents/SettingsControl.xaml" Layout="List">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Control" Source="/Views/Contents/SettingsControl.xaml" />
                <mui:Link DisplayName="Appearance" Source="/Views/Contents/SettingsAppearance.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
